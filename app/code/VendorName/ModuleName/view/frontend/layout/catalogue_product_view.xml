<?xml version="1.0" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Adding the custom widget to the product page -->
        <referenceContainer name="content">
            <block class="VendorName\ModuleName\Block\Widget\CustomWidget" 
                   name="custom_elfsight_widget" 
                   template="VendorName_ModuleName::widget/custom.phtml">
                <arguments>
                    <argument name="template" xsi:type="string">custom</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
